<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#fff5f5"
    app:cardCornerRadius="7dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/my_cart_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/my_cart_image"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/cart_name"
            android:layout_toRightOf="@id/my_cart_image"
            android:text="-" />

        <TextView
            android:id="@+id/cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/button_minus"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/cart_name"
            android:layout_toRightOf="@+id/cart_quantity"
            android:text="+" />


        <TextView
            android:id="@+id/cart__price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_gray_line"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/my_cart_image"
            android:textColor="#000"
            android:textStyle="bold" />
        <!--<Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            />-->
        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_delete_black_24dp" />


        <TextView
            android:id="@+id/view_gray_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/my_cart_image"
            android:background="#c7c7c7" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>